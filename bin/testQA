#!/bin/bash

# Define colors
BLUE='\033[0;34m'
CYAN='\033[0;36m'
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Initialize counters
total=0
success=0
failed=0


# Print header with date and timestamp
echo -e "${BLUE}=========================================${NC}"
echo -e "${CYAN}QA  Environment Health Check${NC}"
echo -e "${BLUE}Date: $(date '+%Y-%m-%d')${NC}"
echo -e "${BLUE}Time: $(date '+%H:%M:%S') / EST: $(TZ='America/New_York' date '+%H:%M:%S')${NC}"
echo -e "${BLUE}=========================================${NC}\n"


websites=(
    "https://cluster-console.qa.lib.harvard.edu"
    "https://deployment.qa.lib.harvard.edu"
    "https://logs.qa.lib.harvard.edu"
    "https://access-qa.lib.harvard.edu/redirects/healthcheck"
    "https://acorn-qa.lib.harvard.edu/records/list"
    "https://arclight-qa.lib.harvard.edu/"
    "https://collex-qa.lib.harvard.edu/"
    "https://curiosity-qa.lib.harvard.edu"
    "https://dims-qa.lib.harvard.edu/readiness"
    "https://drsmqsrv-qa.lib.harvard.edu/drs2_activemq/rest/heartbeat"
    "https://drs2-qa.hul.harvard.edu/drs2_webadmin/search"
    "https://eadchecker-qa.lib.harvard.edu/"
    "https://eda-qa.lib.harvard.edu"
    "https://embed-qa.lib.harvard.edu/"
    "https://etd-qa.lib.harvard.edu"
    "https://fal-solr-qa.lib.harvard.edu/api/healthcheck"
    "https://fts-qa.lib.harvard.edu/fts/"
    "https://hgl-qa.lib.harvard.edu"
    "https://hgladm-qa.lib.harvard.edu/"
    #"https://ids-qa.lib.harvard.edu/ids/health"
    "https://ids-qa.lib.harvard.edu/ids/view/400984023"
    "https://iiif-qa.lib.harvard.edu/manifests/health"
    #"https://imgconv-qa.lib.harvard.edu/health"
    "https://jobmon-qa.lib.harvard.edu"
    "https://jstor-qa.lib.harvard.edu"
    "https://lc-tools-qa.lib.harvard.edu/csv"
    "https://lc-tools-qa.lib.harvard.edu/oai/?verb=Identify"
    "https://listview-qa.lib.harvard.edu"
    "https://lts-pipelines-qa.lib.harvard.edu/home"
    "https://mps-qa.lib.harvard.edu/assets/image/DRS:402682523"
    "https://nrs-qa.lib.harvard.edu/healthcheck"
    "https://nrsadmin-qa.lib.harvard.edu/resources/search/advanced"
    "https://olivia-qa.lib.harvard.edu/olivia/servlet/OliviaServlet"
    "https://policyadmin-qa.lib.harvard.edu/policy/servlet/admin"
    "https://pds-qa.lib.harvard.edu/pds"
    #"https://solr-qa.lib.harvard.edu/solr/#/login"
    "https://sds-qa.lib.harvard.edu/sds/video/400302240"
    #"https://tools-qa.lib.harvard.edu/hdforms/retrieval"
    "https://viewer-qa.lib.harvard.edu/"
    "https://webservices-qa.lib.harvard.edu/rest/v3/hollis/marc/isbn/9780307269751?jsonp=foo"
)

total=${#websites[@]}
current=0

for site in "${websites[@]}"
do
    ((current++))
    echo -ne "${YELLOW}Checking site $current of $total...${NC}\r"
    
    # Measure response time and get status code
    start_time=$(date +%s.%N)
    response=$(curl -Is --connect-timeout 5 --max-time 10 "$site" 2>/dev/null)
    end_time=$(date +%s.%N)
    
    # Calculate response time
    response_time=$(echo "$end_time - $start_time" | bc)
    response_time=$(printf "%.2f" $response_time)
    
    # Get status code
    status_code=$(echo "$response" | head -n 1 | cut -d ' ' -f 2)
    
    # Handle curl failures
    if [ -z "$status_code" ]; then
        status_code="ERROR"
        status_color=$RED
        ((failed++))
    else
        # Set color based on status code
        if [ "$status_code" = "200" ] || [ "$status_code" = "302" ]; then
            status_color=$GREEN
            ((success++))
        else
            status_color=$RED
            ((failed++))
        fi
    fi
    
    echo -e "${CYAN}$site: ${status_color}$status_code${NC} (${YELLOW}${response_time}s${NC})"
done

# Print summary
echo -e "\n${BLUE}=========================================${NC}"
echo -e "${CYAN}Summary:${NC}"
echo -e "${GREEN}Successful: $success${NC}"
echo -e "${RED}Failed: $failed${NC}"
echo -e "${BLUE}Total: $total${NC}"
echo -e "${BLUE}=========================================${NC}"